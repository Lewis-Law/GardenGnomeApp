<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GardenGnomeApp.TicTacToeChoosePlayer">
    <ContentPage.ToolbarItems>
        <ToolbarItem Name="Settings" Activated="Clicked13"  Order="Primary" Priority="0" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout>
            <Button Image="twoPlayersButton.png" 
                    VerticalOptions="FillAndExpand"
                    HorizontalOptions="FillAndExpand"
                    Clicked="PlayerTwoClicked"
                    FontSize="Large"
                    Margin="25, 20, 25, 20"/>
            <Button Image="computerButton.png" 
                    VerticalOptions="FillAndExpand"
                    HorizontalOptions="FillAndExpand"
                    Clicked="ComputerClicked"
                    FontSize="Large"
                    Margin="25, 20, 25, 20"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>